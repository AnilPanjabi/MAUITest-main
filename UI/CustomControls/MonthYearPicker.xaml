<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUITest.UI.CustomControls.MonthYearPicker">
    <StackLayout Orientation="Horizontal">
        <Grid ColumnDefinitions="50,10,50" RowDefinitions="Auto">
            <Picker Grid.Row="0" Grid.Column="0" x:Name="MonthPicker" Title="Month" SelectedIndexChanged="OnMonthSelected" />
            <Label Grid.Row="0" Grid.Column="1" Padding="0,10,0,0" FontSize="Large" Text="/" />
            <Picker Grid.Row="0" Grid.Column="2" x:Name="YearPicker" Title="Year" SelectedIndexChanged="OnYearSelected"/>
        </Grid>
    </StackLayout>
</ContentView>

